{
  "name": "shopmate-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:prod": "babel src --out-dir dist --copy-files --ignore node_modules",
    "clean": "rm -rf dist && mkdir dist",
    "build": "yarn run clean && yarn run build:prod",
    "serve": "node dist/server.js",
    "start": "NODE_ENV=production yarn run build && yarn run serve",
    "start:dev": "NODE_ENV=development DEBUG=log nodemon --exec node --require @babel/register $NODE_DEBUG_OPTION src/server.js",
    "lint": "node_modules/.bin/eslint ./src",
    "lint:fix": "yarn lint --fix",
    "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "express": "~4.16.0",
    "jest": "^24.9.0",
    "morgan": "~1.9.0",
    "node-sass-middleware": "^0.11.0",
    "nodemon": "^1.18.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "eslint": "^5.16.0",
    "nodemon": "^1.18.11"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/config/database/migrations",
      "<rootDir>/src/config/database/seeders",
      "<rootDir>/src/database/models/index.js"
    ],
    "testEnvironment": "node"
  }
}
